generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lead {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  status    String   @default("NEW")
  name      String?
  phone     String
  checkIn   DateTime?
  checkOut  DateTime?
  guests    Int?
  comment   String?
  source    String?
  pageUrl   String?
  userAgent String?
  utm       Json?

  @@index([createdAt])
  @@index([phone])
}
