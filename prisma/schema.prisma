generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Room {
  id          String      @id @default(cuid())
  slug        String      @unique
  name        String
  description String?
  capacity    Int         @default(2)
  basePrice   Int
  amenities   String[]
  isActive    Boolean     @default(true)
  createdAt   DateTime    @default(now())
  images      RoomImage[]
  rates       SeasonalRate[]
  requests    BookingRequest[]
}

model RoomImage {
  id        String @id @default(cuid())
  roomId    String
  url       String
  alt       String?
  sortOrder Int    @default(0)
  room      Room   @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId])
}

model SeasonalRate {
  id            String   @id @default(cuid())
  roomId        String
  startDate     DateTime
  endDate       DateTime
  pricePerNight Int
  createdAt     DateTime @default(now())
  room          Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)

  @@index([roomId, startDate, endDate])
}

model BookingRequest {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  status     String   @default("NEW")
  roomId     String?
  name       String?
  phone      String
  checkIn    DateTime?
  checkOut   DateTime?
  guests     Int?
  comment    String?
  totalPrice Int?
  currency   String?  @default("RUB")
  source     String?
  pageUrl    String?
  userAgent  String?
  utm        Json?
  room       Room?    @relation(fields: [roomId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([status])
}
